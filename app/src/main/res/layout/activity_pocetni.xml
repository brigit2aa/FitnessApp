<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PocetniActivity">

    <ImageView

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        app:srcCompat="@drawable/fit1"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:id="@+id/prijavise"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="383dp"
        android:text="Prijavi se"
        android:textColor="@color/white"
        android:background="@drawable/allbutton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"/>
    <Button
        android:id="@+id/registracija"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/prijavise"
        android:text="Registriraj se"
        android:textColor="@color/white"
        android:background="@drawable/allbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="447dp" />
</RelativeLayout>