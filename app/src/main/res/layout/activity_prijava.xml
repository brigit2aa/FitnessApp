<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="70dp"
    android:background="@color/white"
    tools:context=".PrijavaActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        app:srcCompat="@drawable/prijava"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/korisnickoime"
        android:hint="Adresa e-poÅ¡te"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/logo"
        />

    <EditText
        android:id="@+id/lozinka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/korisnickoime"
        android:layout_marginBottom="16dp"
        android:hint="Lozinka"
        android:password="true"/>

    <Button
        android:id="@+id/prijavise"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lozinka"
        android:text="Prijavi se"
        android:background="@drawable/allbutton"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />
    <!--android:background="@drawable/custom_button" />-->
</RelativeLayout>